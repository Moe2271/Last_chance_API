{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": [],
  "overrides": [],

  "parserOptions": {
    "project": ["./ --fix"],
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "eqeqeq": "off",
    "@typescript-eslint/no-inferrable-types": [0],
    "valid-jsdoc": "off",
    "semi": [2, "always"],
    "keyword-spacing": ["error", { "after": true }],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "space-infix-ops": ["error", { "int32Hint": false }],
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  } // end of rules
}
